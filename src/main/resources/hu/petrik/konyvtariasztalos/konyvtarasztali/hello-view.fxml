<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefWidth="600.0" spacing="20.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hu.petrik.konyvtariasztalos.konyvtarasztali.KönyvController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <HBox prefHeight="30.0" prefWidth="200.0">
      <children>
          <Button fx:id="deleteBtton" onAction="#onHelloButtonClick" text="Törlés">
            <HBox.margin>
               <Insets right="190.0" />
            </HBox.margin></Button>
      </children>
      <VBox.margin>
         <Insets />
      </VBox.margin>
   </HBox>
   <TableView prefHeight="200.0" prefWidth="200.0">
     <columns>
       <TableColumn fx:id="cimCol" prefWidth="200.0" text="Cím" />
       <TableColumn fx:id="szerzoCol" prefWidth="200.0" text="Szerző" />
         <TableColumn fx:id="kiadasCol" prefWidth="75.0" text="Kiadás éve" />
         <TableColumn fx:id="oldalszamCol" prefWidth="75.0" text="Oldalszám" />
     </columns>
   </TableView>
</VBox>
